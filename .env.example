# Shin Shop Environment Variables - Supabase Integration
# Copy this file to .env.development and .env.production
# Update the values according to your environment

# ===================================
# SUPABASE BACKEND CONFIGURATION
# ===================================

# Supabase Project URL
# Get this from your Supabase project dashboard
GATSBY_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anonymous Key
# Get this from your Supabase project dashboard
GATSBY_SUPABASE_ANON_KEY=your_supabase_anon_key

# Debug Mode (true for development, false for production)
GATSBY_DEBUG_MODE=true

# ===================================
# SITE CONFIGURATION
# ===================================

# Site URL
GATSBY_SITE_URL=https://makushinpadshop.netlify.app

# Analytics (Optional)
GATSBY_GA_TRACKING_ID=your_google_analytics_tracking_id

# ===================================
# PAYMENT CONFIGURATION
# ===================================

# Stripe Configuration (for payments)
GATSBY_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Mollie Configuration (alternative payment processor for CZK/EUR)
GATSBY_MOLLIE_PROFILE_ID=your_mollie_profile_id
MOLLIE_API_KEY=test_your_mollie_api_key

# ===================================
# EMAIL CONFIGURATION
# ===================================

# Email Configuration (for order notifications via Supabase Edge Functions)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ===================================
# DEVELOPMENT CONFIGURATION
# ===================================

# Supabase Service Role Key (for local development only)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_for_local_dev

# Local Supabase URLs (when running supabase start)
GATSBY_SUPABASE_URL_LOCAL=http://localhost:54321
SUPABASE_SERVICE_ROLE_KEY_LOCAL=your_local_service_role_key

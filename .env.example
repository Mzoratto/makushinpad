# Shin Shop Environment Variables
# Copy this file to .env.production for production deployment

# Snipcart Configuration
GATSBY_SNIPCART_API_KEY=your_production_snipcart_public_api_key_here

# Site Configuration
GATSBY_SITE_URL=https://makushinpadshop.netlify.app

# Analytics (Optional)
GATSBY_GA_TRACKING_ID=your_google_analytics_tracking_id

# Stripe (if using direct Stripe integration)
GATSBY_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Development vs Production
NODE_ENV=production

# ===================================
# EMAIL NOTIFICATION CONFIGURATION
# ===================================

# Email Service Provider (gmail or smtp)
EMAIL_PROVIDER=gmail

# Gmail Configuration (if using Gmail)
GMAIL_USER=your-business-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# SMTP Configuration (if using custom SMTP)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# Business Email Configuration
BUSINESS_EMAIL=your-business-email@gmail.com
BUSINESS_CC_EMAIL=optional-cc-email@gmail.com

# Webhook Security
SNIPCART_WEBHOOK_SECRET=your-webhook-secret-key-here

# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values
# NEVER commit actual production credentials to version control

# Supabase Configuration
GATSBY_SUPABASE_URL=https://your-project-ref.supabase.co
GATSBY_SUPABASE_ANON_KEY=your_anon_key_here

# Site Configuration
GATSBY_SITE_URL=https://makushinpadshop.netlify.app
GATSBY_SITE_NAME=The Shin Shop
GATSBY_SITE_DESCRIPTION=Premium shin pads for athletes

# Security Configuration
GATSBY_ENVIRONMENT=production
GATSBY_DEBUG_MODE=false
GATSBY_ENABLE_ANALYTICS=true

# Currency Configuration
GATSBY_DEFAULT_CURRENCY=CZK
GATSBY_SUPPORTED_CURRENCIES=CZK,EUR
GATSBY_EXCHANGE_RATE_CZK_EUR=25

# Upload Configuration
GATSBY_MAX_UPLOAD_SIZE=52428800
GATSBY_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Payment Configuration (Mollie)
GATSBY_MOLLIE_PROFILE_ID=your_mollie_profile_id
GATSBY_MOLLIE_TEST_MODE=false

# Email Configuration
GATSBY_CONTACT_EMAIL=info@shinshop.com
GATSBY_SUPPORT_EMAIL=support@shinshop.com

# Social Media (optional)
GATSBY_FACEBOOK_URL=https://facebook.com/shinshop
GATSBY_INSTAGRAM_URL=https://instagram.com/shinshop

# Analytics (optional)
GATSBY_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
GATSBY_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Performance Configuration
GATSBY_ENABLE_SERVICE_WORKER=true
GATSBY_ENABLE_OFFLINE_SUPPORT=true

# Security Headers
GATSBY_CSP_ENABLED=true
GATSBY_HSTS_ENABLED=true

# Rate Limiting
GATSBY_API_RATE_LIMIT=100
GATSBY_UPLOAD_RATE_LIMIT=10

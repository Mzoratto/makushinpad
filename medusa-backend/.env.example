# Shin Shop Medusa.js Backend Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/medusa-store

# JWT and Cookie Secrets (generate random strings for production)
JWT_SECRET=some_jwt_secret
COOKIE_SECRET=some_cookie_secret

# CORS Configuration
ADMIN_CORS=http://localhost:7000,http://localhost:7001
STORE_CORS=http://localhost:8000,http://localhost:3000,https://makushinpadshop.netlify.app

# Redis Configuration (optional, for production scaling)
# REDIS_URL=redis://localhost:6379

# Mollie Payment Configuration
MOLLIE_API_KEY=test_your_mollie_api_key_here
MOLLIE_WEBHOOK_URL=https://your-backend-url.com/mollie/webhooks

# Stripe Payment Configuration (fallback)
# STRIPE_API_KEY=sk_test_your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (for order notifications)
EMAIL_PROVIDER=gmail
GMAIL_USER=your-business-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password
BUSINESS_EMAIL=your-business-email@gmail.com
BUSINESS_CC_EMAIL=optional-cc-email@gmail.com

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key

# File Upload Configuration
UPLOAD_DIR=uploads

# Development Configuration
NODE_ENV=development
PORT=9000
ADMIN_PORT=7001

# Open browser automatically in development
OPEN_BROWSER=true
